<?xml version='1.0' encoding='utf-8'?>

<odoo>
    <data noupdate="0">

        <record id="backups_manually_backup_view_form" model="ir.ui.view">
            <field name="name">backups.manually.backup.view.form</field>
            <field name="model">backups.manually.backup</field>
            <field name="arch" type="xml">
                <form string="Do manually backups">
                    <sheet>
                        <group string="" col="2">
                            <field name="bbdd"/>
                            <field name="compression_format"/>
                        </group>
                        <footer>
                            <button name="create_request"
                                string="Search" type="object"
                                class="btn-primary"/>
                            <button string="Cancel"
                                class="btn-default"
                                special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="backups_manually_action" model="ir.actions.act_window">
            <field name="name">Backups Manually</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">backups.manually.backup</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="backups_menu_act" name="Backups"
            parent="mail.mail_channel_menu_root_chat"
            action="backups_manually_action" sequence="5"
            groups="base.group_system"/>

    </data>
</odoo>
